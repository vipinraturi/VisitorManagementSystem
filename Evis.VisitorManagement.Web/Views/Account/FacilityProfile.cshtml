@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <style type="text/css">
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>

    <section class="content">
        <div class="row">
            <div class="box-header with-border">
                <h3 class="box-title">New Client Registration</h3>
            </div>
            <form ng-app="app" ng-controller="companyController" name="companyForm" ng-model="company" novalidate>
                <!-- left column -->
                <div class="col-md-6">
                    <div class="box box-primary">
                        <div class="box-body">
                            <input type="hidden" id="id" name="id" ng-model="company.id" />
                            <div class="form-group">
                                <label for="companyName">Company Name:</label>
                                <input type="text" class="form-control" id="companyName" name="companyName" ng-model="company.companyName" placeholder="Company Name" required>
                                <span style="color:red" ng-show="companyForm.companyName.$invalid">
                                    <span ng-show="companyForm.companyName.$error.required">Company Name is required.</span>
                                </span>
                            </div>

                            <div class="form-group">
                                <label for="companyDescription">Description</label>
                                <textarea class="form-control" rows="2" id="companyDescription" name="companyDescription" placeholder="Description ..." ng-model="company.companyDescription" required></textarea>
                                <span style="color:red" ng-show="companyForm.companyDescription.$invalid">
                                    <span ng-show="companyForm.companyDescription.$error.required">Description is required.</span>
                                </span>
                            </div>



                            <div class="form-group">
                                <label for="mobileNumber">Mobile No</label>
                                <input type="number" class="form-control" id="mobileNumber" name="mobileNumber" ng-model="company.mobileNumber" placeholder="Mobile Number" required>
                            </div>

                            <div class="form-group">
                                <label for="fax">Fax</label>
                                <input type="number" class="form-control" id="fax" name="fax" ng-model="company.fax" placeholder="Fax" required>
                                <span style="color:red" ng-show="companyForm.fax.$invalid">
                                    <span ng-show="companyForm.fax.$error.required">Fax is required.</span>
                                </span>
                            </div>

                            <div class="form-group">
                                <label for="website">Website:</label>
                                <input type="text" class="form-control" id="website" name="website" ng-model="company.website" placeholder="Website" required>
                                <span style="color:red" ng-show="companyForm.website.$invalid">
                                    <span ng-show="companyForm.website.$error.required">Website is required.</span>
                                </span>
                            </div>
                        </div><!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!--/.col (left) -->
                <!-- right column -->
                <div class="col-md-6">
                    <div class="box box-primary">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" ng-model="company.email" placeholder="Email" required>
                                <span style="color:red" ng-show="companyForm.email.$invalid">
                                    <span ng-show="companyForm.email.$error.required">Email is required.</span>
                                </span>
                            </div>

                            <div class="form-group">
                                <label for="phoneNumber">Contact No</label>
                                <input type="number" class="form-control" id="phoneNumber" name="phoneNumber" ng-model="company.phoneNumber" placeholder="Phone Number" required>
                                <span style="color:red" ng-show="companyForm.phoneNumber.$invalid">
                                    <span ng-show="companyForm.phoneNumber.$error.required">Phone Number is required.</span>
                                </span>
                            </div>
                            <div class="form-group">
                                <label for="address">Address</label>
                                <textarea class="form-control" rows="3" id="address" name="address" placeholder="Address ..." ng-model="company.address"></textarea>
                                <span style="color:red" ng-show="companyForm.address.$invalid">
                                    <span ng-show="companyForm.address.$error.required">Phone Number is required.</span>
                                </span>
                            </div>

                            <div class="form-group">
                                <label for="zipcode">Zip Code</label>
                                <input type="number" class="form-control" id="zipcode" name="zipcode" ng-model="company.zipcode" placeholder="Zip Code" required>
                                <span style="color:red" ng-show="companyForm.zipcode.$invalid">
                                    <span ng-show="companyForm.zipcode.$error.required">Zipcode is required.</span>
                                </span>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" style="float:right;" class="btn btn-primary" ng-click="SaveCompany()">
                                Submit
                            </button>
                        </div>
                    </div>
                </div>
                <!--/.col (right) -->
            </form>
        </div>
        <!-- /.row -->
    </section>
</div>

<script type="text/javascript" src="~/Scripts/Controllers/CompanyController.js"></script>

